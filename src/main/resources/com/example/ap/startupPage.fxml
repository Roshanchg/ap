<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.shape.Rectangle?>

<StackPane xmlns="http://javafx.com/javafx/11.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:id="root"
           fx:controller="com.example.ap.HelloController">

    <Rectangle fx:id="overlay" fill="rgba(0,0,0,0.4)" />
    <Rectangle fx:id="overlay1" fill="rgba(255,255,255,0.3)" />

    <VBox styleClass="background-container">
        <!-- Header -->
        <HBox styleClass="header" alignment="CENTER_LEFT" spacing="15.0">
            <padding><Insets top="20" bottom="20" left="40" right="40"/></padding>
            <children>
                <ImageView fx:id="logoImage" fitHeight="48" fitWidth="48" preserveRatio="true">
                    <Image url="@images/logo.png"/>
                </ImageView>

                <!-- Mystical Travels text next to logo -->
                <Label text="Mystical Travels" styleClass="logo-text" />

                <Region HBox.hgrow="ALWAYS"/>

                <HBox spacing="20.0" styleClass="nav-menu" alignment="CENTER_RIGHT">
                    <children>
                        <Button fx:id="homeBtn" styleClass="nav-button" text="Home" />
                        <Button fx:id="contactBtn" styleClass="nav-button" text="Contact" />
                        <Button fx:id="loginBtn" styleClass="nav-button" text="Login" />
                    </children>
                </HBox>
            </children>
        </HBox>

        <Region VBox.vgrow="ALWAYS"/>

        <!-- Hero Section -->
        <HBox alignment="CENTER_LEFT" spacing="20" styleClass="hero-wrapper">
            <padding><Insets left="80" right="80"/></padding>
            <children>
                <VBox spacing="15" styleClass="hero-content">
                    <children>
                        <Label fx:id="titleLabel" styleClass="hero-title" text="Explore Beauty of Nepal" />
                        <Label styleClass="hero-title-accent" text="with Mystical Travels" />
                        <Label fx:id="subtitleLabel"
                               styleClass="hero-subtitle"
                               text="Discover culture, mountains, and mystery with our curated travel packages."
                               wrapText="true" />
                        <Button fx:id="bookNowBtn" styleClass="book-now-button" text="Book Now"/>
                    </children>
                </VBox>

                <Region HBox.hgrow="ALWAYS" />

                <VBox spacing="15" alignment="CENTER" styleClass="auth-box">
                    <Label text="Get Started" styleClass="auth-title" />
                    <Button fx:id="loginBoxBtn" text="Login" styleClass="auth-button" />
                    <Button fx:id="registerBoxBtn" text="Register" styleClass="auth-button-outline" />
                </VBox>
            </children>
        </HBox>

        <Region VBox.vgrow="ALWAYS"/>
    </VBox>
</StackPane>
