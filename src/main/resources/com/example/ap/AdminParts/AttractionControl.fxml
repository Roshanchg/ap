<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      stylesheets="@../css/touristControl.css"
      fx:controller="com.example.ap.admincontrollers.attractionEditController"
      styleClass="content-pane" spacing="20">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <HBox spacing="20" alignment="CENTER_LEFT">
        <Label text="Edit Tourist" styleClass="section-title"/>
        <Label text="All Tourist" styleClass="section-subtitle"/>
    </HBox>

    <HBox spacing="20" alignment="CENTER_LEFT">
        <Button text="Filter" styleClass="action-button" />
        <Button text="Clear Search" styleClass="secondary-button" />
    </HBox>

    <GridPane styleClass="form-grid" hgap="20" vgap="15">
        <columnConstraints>
            <ColumnConstraints percentWidth="30"/>
            <ColumnConstraints percentWidth="70"/>
        </columnConstraints>

        <!-- Form rows remain the same as before -->
        <!-- Row 1: Name -->
        <Label text="Name" styleClass="form-label" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" text="Andrew Salgado" styleClass="form-field" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <!-- Row 2: Email -->
        <Label text="Email address" styleClass="form-label" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="emailField" text="example@mail.com" styleClass="form-field" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <!-- Row 3: Password -->
        <Label text="Password" styleClass="form-label" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <PasswordField fx:id="passwordField" styleClass="form-field" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <!-- Row 4: Login ID -->
        <Label text="Login ID" styleClass="form-label" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="loginIdField" text="0" styleClass="form-field" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <!-- Row 5: Bookings -->
        <Label text="Bookings" styleClass="form-label" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <ComboBox fx:id="bookingsComboBox" value="Any" styleClass="form-field" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <!-- Row 6: Contact Details -->
        <Label text="Contact Details" styleClass="form-label" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <TextArea fx:id="contactDetailsArea" styleClass="form-textarea" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
    </GridPane>
    <!-- ... -->


    <HBox spacing="20" alignment="CENTER_RIGHT">
        <Button text="Confirm Edit" styleClass="primary-button" />
        <Button text="Confirm Passwords" styleClass="secondary-button" />
        <Button text="Practice" styleClass="secondary-button"/>
        <Button text="Select" styleClass="secondary-button"/>
    </HBox>
</VBox>
